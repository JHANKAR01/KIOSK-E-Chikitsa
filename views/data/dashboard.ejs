    animation: flow 5s infinite alternate; /* Add the flow animation */
    transition: transform 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease; /* Smooth transitions */

    /* Box shadow for a raised effect */
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}



.box:hover {
    transform: scale(1.05);
    border-color: rgb(159, 226, 191); /* Change border color on hover */
    box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2); /* Increase shadow on hover */
    border-radius: 2px;
    border-width: 3px;
}
@keyframes flow {
    0% {
        transform: translateY(0);
    }
    50% {
        transform: translateY(5px); /* Add a subtle up-and-down motion */
    }
    100% {
        transform: translateY(0);
    }
}

/* Style the last box in a row to remove the right margin */
.box:nth-child(3n) {
    margin-right: 0;
}

