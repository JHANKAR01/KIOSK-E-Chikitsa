/* Service Box Styles */
.box {
    flex: 0 0 calc(33.33% - 20px);
    background-color: #fff;
    border: 2px solid #ddd;
    margin-right: 20px;
    padding: 20px;
    border-radius: 5px;
    box-sizing: border-box;
    margin-bottom: 20px;
    height: 260px;
    border-bottom:6px solid rgb(159, 226, 191); 
   
   
